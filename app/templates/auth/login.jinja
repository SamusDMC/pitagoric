{% extends 'layouts/base.jinja' %}

{% block head_scripts %}
  {{ set_script('login') }}
{% endblock %}

{% block content %}
  <div class="container">
    <form id="form-login" action="{{ url_for('login') }}" method="post">
      <h1>Aprende matemáticas como Pitagoras</h1>
      <input type="text" name="username" placeholder="User name" autofocus> <br>
      <input type="password" name="password" placeholder="Password"> <br>
      <button type="submit">Log in</button>
    </form>

    <p>¿Aún no te has registrado?, <a href="/signup">registrate</a>.</p>
  </div>
{% endblock %}
