{% extends 'layouts/base.jinja' %}

{% block head_scripts %}
  {{ set_script('signup') }}
{% endblock %}

{% block content %}
<section class="signup">
  <div class="container">
    <div class="row center-xs">
      <div class="col-xs-12">
        <h1>Join with us and you learn all about of mathematics!</h1>
      </div>
      <div class="col-xs-6">
        <div class="fields">
          <form id="form-signup" action="{{ url_for('signup') }}" method="post">
            <h2>Registrarse</h2>
            <input type="text" name="fullname" placeholder="Nombre completo"> <br>
            <input type="text" name="username" placeholder="Nombre de usuario"> <br>
            <input type="text" name="email" placeholder="Correo electronico"> <br>
            <textarea name="name" rows="8" cols="80" placeholder="Biografía"></textarea> <br>
            <input type="password" name="password" placeholder="Contraseña"> <br>
            <input type="password" name="repeat_password" placeholder="Confirmar contraseña"> <br>
            <button type="submit">Enviar</button>
          </form>
          <p>¿Ya tienes una cuenta?, <a href="/login">inicia sesión</a>.</p>
        </div>
      </div>
    </div>

  </div>
</section>
{% endblock %}
